<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="app.genex.com.junosty.LoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editcontrase単a"
        android:typeface="monospace"
        android:hint="Contrase単a"
        android:textColor="#FFF3D5"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/editTextnombre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/editstyle"
        android:padding="10dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_launcher"
        android:id="@+id/imageView2"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/editcontrase単a"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress|textPersonName"
        android:ems="10"
        android:textColor="#FFF3D5"
        android:fontFamily="sans-serif-light"
        android:id="@+id/editemail"
        android:hint="Confirmar Boleta"
        android:elevation="0dp"
        android:background="@drawable/editstyle"
        android:padding="10dp"
        android:layout_below="@+id/editBoleta"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:textColor="#FFF3D5"
        android:fontFamily="sans-serif-light"
        android:id="@+id/editBoleta"
        android:hint="Boleta"
        android:background="@drawable/editstyle"
        android:padding="10dp"
        android:elevation="0dp"
        android:layout_below="@+id/editcontrase単a"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-light"
        android:id="@+id/editTextnombre"
        android:hint="Nombre"
        android:layout_marginTop="153dp"
        android:selectAllOnFocus="false"
        android:padding="10dp"
        android:background="@drawable/editstyle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:textColor="#FFFF"
        android:text="Registrar"
        android:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonreg"
        android:background="@color/colorPrimary"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/editemail"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
