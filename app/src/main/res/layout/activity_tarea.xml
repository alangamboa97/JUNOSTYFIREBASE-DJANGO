<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tarea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.genex.com.junosty.Tarea">

    <Button
        android:text="Agregar Tarea "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agregartarea" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/tarea"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp">









    </android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/tarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agregartarea"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />
    <EditText
        android:id="@+id/tareaDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tarea"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agregar"
        android:text="Agregar"
        android:layout_above="@+id/my_recycler_view"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnagregardescTarea"
        android:text="Agregar DescripciÃ³n"
        android:layout_alignBaseline="@+id/tareaDesc"
        android:layout_alignBottom="@+id/tareaDesc"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
